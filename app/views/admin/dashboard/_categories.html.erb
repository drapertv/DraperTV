<h1>Categories</h1>
<div class="admin-table">
	<div class="admin-row">
		<div class="short">ID</div>
		<div>Name</div>
		<div class="short"># of Items</div>
		<div>Actions</div>
	</div>
	<% Category.all.each do |cat| %>

			<div class="admin-row">
				<%= form_tag admin_category_path(cat), method: "patch" do %>
					<div class="short">
						<%= cat.id %>
					</div>
					<div>
						<%= text_field_tag :name, cat.name, name: "category[name]" %>
					</div>
					<div class="short">
						<%= cat.series.count %>
					</div>
					<div>
						<a class="delete_link member_link" data-confirm="Are you sure you want to delete this?" data-method="delete" href="/admin/categories/<%= cat.id %>" rel="nofollow">Delete</a>
						<%= submit_tag "Update", :class => "member_link" %>
					</div>
				<% end %>
			</div>
	<% end %>
	<div>
		<div>
			<a href="/admin/categories/new">Create New Category</a>
		</div>
	</div>
</div>
