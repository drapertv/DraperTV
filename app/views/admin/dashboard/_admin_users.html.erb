<h1> Admin Users</h1>
<div class="admin-table">
	<div class="admin-row">
		<div>Email</div>
		<div>Password</div>
		<div>Date Created</div>
		<div>Last Login</div>
		<div>Actions</div>
	</div>
	<% AdminUser.all.each do |ad_user| %>
		
			<div class="admin-row">
				<%= form_tag admin_admin_user_path(ad_user), method: "patch" do %>
					<div>
						<%= text_field_tag :email, ad_user.email, name: "admin_user[email]" %>
					</div>
					<div>
						<%= text_field_tag :password, nil, name: "admin_user[password]" %>
					</div>
					<div>
						<%= ad_user.created_at %>
					</div>
					<div>
						<%= ad_user.last_sign_in_at %>
					</div>
					<div>
						<a class="delete_link member_link" data-confirm="Are you sure you want to delete this?" data-method="delete" href="/admin/admin_users/<%= ad_user.id %>" rel="nofollow">Delete</a>
						<%= submit_tag "Update", :class => "member_link" %>
					</div>
				<% end %>
			</div>
	<% end %>
	<div>
		<div>
			<a href="/admin/admin_users/new">Create New Admin User</a>
		</div>
	</div>
</div>