<%= content_for :link_overlay do %>
  <a href="#" class="background-link disabled"></a>
<% end %>
<div class="section-head">
  <div class="overlay">
  </div><div class="gradient">
  </div>
  <div class="horizontal-gradient">
  </div>
  <div class="content">
    <%= image_tag "speaker-white.png", :class => "icon" %>
    <h1>SPEAKER SERIES</h1>
    <p>Watch talks given at Draper University by top Silicon Valley startup founders and executives. Each lecture is curated into a series of short videos highlighting important topics our speakers present.</p>
  </div>
  <div class="image"></div>
</div>

<div class="sort-bar">
  <div class="action-icon expanded teal-item show-notify-modal">
    <%= image_tag "notify-icon.svg", :class => "notify-icon svg" %> 
    <p>Notify Me</p>
  </div>
  <div class="sort-options">
    <div class="sort-label">Sorted By:</div>
    
    <div class="dropdowns">
      <div class="order-sort sorter">
        <p>Newest</p >
        <%= image_tag "dropdown-triangle.svg", :class => 'open-dropdown' %>
        <ul class="sort-dropdown">
          <li class="current" data-sort-criteria="date" data-sort-direction="asc">Newest</li>
          <li data-sort-criteria="date" data-sort-direction='desc'>Oldest</li>
          <li data-sort-criteria="speaker" data-sort-direction='asc'>Speaker A-Z</li>
          <li data-sort-criteria="speaker" data-sort-direction='desc'>Speaker Z-A</li>
          <li data-sort-criteria="views" data-sort-direction='desc'>Most Viewed</li>
        </ul>
      </div>
      <div class="industry-sort sorter">
        <p>All Industries</p>
        <%= image_tag "dropdown-triangle.svg", :class => 'open-dropdown' %>
        <ul class="sort-dropdown">
          <li class="current">All Industries</li>
          <li>Industry 1</li>
          <li>Industry 2</li>
          <li>Industry 3</li>
          <li>Industry 4</li>
          <li>Industry 5</li>
          <li>Industry 6</li>
          <li>Industry 7</li>
          <li>Industry 8</li>
          <li>Industry 9</li>
          <li>Industry 10</li>
        </ul>
      </div>
    </div>
  </div>
</div>

<section class="media-container index-view">
  <div class="media-list">
    <div class="media-thumbnails wrap lazy-load sortable">
          <!-- Content loaded in with ajax  -->
    </div>
    <div id="load-more" offset="0">
      Show More
    </div>
  </div>
</section>

<script>
  $(document).ready(function() {
    var height = $('footer').height()
    $('.media-container').css('min-height', 'calc(100vh - 130px - ' + height + 'px)')
  })    
</script>