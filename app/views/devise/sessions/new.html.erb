<section id="content" class="m-t-lg wrapper-md animated fadeInUp">
  <div class="container aside-xl">
    <a class="navbar-brand block" href="<%= root_path %>"><span class="h1 font-bold">Ignite TV</span></a>
    <section class="m-b-lg">
      <header class="wrapper text-center">
        <strong>Sign in to get in touch</strong>
      </header>

        <%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form'}) do |f| %>
          <h3>Sign in</h3>
          <%= devise_error_messages! %>
          <div class="form-group">
            <%= f.label :email %>
            <%= f.email_field :email, :autofocus => true, class: 'form-control rounded input-lg text-center no-border' %>
          </div>
          <div class="form-group">
            <%= f.label :password %>
            <%= f.password_field :password, class: 'form-control rounded input-lg text-center no-border' %>
          </div>


          <button type="submit" class="btn btn-lg btn-warning lt b-white b-2x btn-block btn-rounded"><i class="icon-arrow-right pull-right"></i><span class="m-r-n-lg">Sign in</span></button>


            <% if devise_mapping.rememberable? -%>
              <div class="checkbox">
                <%= f.check_box :remember_me %> <%= f.label :remember_me %>
              </div>

            <%- if devise_mapping.recoverable? %>
            <div class="text-center m-t m-b">
              <%= link_to(new_password_path(resource_name)) do %>
                  <small>Forgot password?</small>
              <% end %>
            </div>

            <% end -%>

          <%- if devise_mapping.registerable? %>
          <div class="line line-dashed"></div>
            <%= link_to(new_registration_path(resource_name)) do %>
            <p class="text-muted text-center"><small>Do not have an account?</small></p>
            <% end %>
          <% end -%>
            <% end -%>
        <% end %>
      </div>
        </form>
      </section>
    </div>
  </section>