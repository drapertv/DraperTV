<section id="content" class="m-t-lg wrapper-md animated fadeInUp">
  <div class="container aside-xl">
    <a class="navbar-brand block" href="<%= root_path %>"><span class="h1 font-bold">DraperTV</span></a>
    <section class="m-b-lg">
				<h2><%= t 'devise.invitations.edit.header' %></h2>
				<%= simple_form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => { :method => :put, :class => 'form-vertical',:role => 'form'  } do |f| %>

				  <%= devise_error_messages! %>
				  <%= f.hidden_field :invitation_token %>
				   <div class="form-group">
            <%= f.input :password, class: 'form-control rounded input-lg text-center no-border' %>
          </div>
				   <div class="form-group">
            <%= f.input :password_confirmation, class: 'form-control rounded input-lg text-center no-border' %>
          </div>

				  <%= f.submit t("devise.invitations.edit.submit_button"), :class => "btn btn-primary" %>

				  <% end %>
      </section>



    </div>
  </section>