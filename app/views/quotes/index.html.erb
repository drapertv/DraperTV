<h1>Listing quotes</h1>

<table>
  <thead>
    <tr>
      <th>Author</th>
      <th>Speaker</th>
      <th>Content</th>
      <th>Shared</th>
      <th>Sharedcounter</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @quotes.each do |quote| %>
      <tr>
        <td><%= quote.author_id %></td>
        <td><%= quote.speaker_id %></td>
        <td><%= quote.content %></td>
        <td><%= quote.shared %></td>
        <td><%= quote.sharedCounter %></td>
        <td><%= link_to 'Show', quote %></td>
        <td><%= link_to 'Edit', edit_quote_path(quote) %></td>
        <td><%= link_to 'Destroy', quote, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Quote', new_quote_path %>
