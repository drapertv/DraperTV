<header id="landing-header">
  <div class="header-mid no-mobile">
    <div class="header-item m-md">
      <a href="<%= playlists_path %>" class="header-item">SERIES</a>
    </div>
    <div class="header-item m-md">
      <a href="<%= videos_path %>" class="header-item">QUICK WATCHES</a>
    </div>
  </div>

  <div class="header-right no-mobile">
    <ul class="nav navbar-nav m-n hidden-xs nav-user user">
      <li class="dropdown">
        <a href="#" class="dropdown-toggle bg clear header-item" data-toggle="dropdown">
          <span class="thumb-sm avatar pull-right m-t-n-sm m-b-n-sm m-l-sm">
            <%= image_tag current_user.avatar_url(:thumb).to_s %>
          </span>
          <%= User.find(current_user.id).name %>
          <b class="caret"></b>
        </a>
        <ul class="dropdown-menu animated fadeInRight">
          <li>
            <a href="#">
              Account Type:
              <%# User.find(current_user.id).roles.first.name.titleize unless User.find(current_user.id).roles.first.nil? %>
            </a>
          </li>
          <li>
            <span class="arrow top"></span>
            <%= link_to 'Edit account', edit_user_registration_path %>
          </li>
          <li>
            <%= link_to 'Profile', profile_edit_path(current_user) %>
          </li>
          <li>
          <a href="docs.html">Help</a>
          </li>
          <li class="divider"></li>
          <li>
            <%= link_to 'Sign out', destroy_user_session_path, :method=>'delete' %>
          </li>
        </ul>
      </li>
    </ul>
  </div>


  <div class="header-left">
    <a href="<%= root_path %>" class="navbar-brand text-lt">
      <!--  <i class="icon-fire"></i> -->
      <img src="<%= asset_url('assets/draper-logo.png') %>" alt="." class="header-item logo">
    </a>

  </div>
</header>
