<footer>
  <div class="footer-main">
    <div class="left">
      <h3>Get DraperTV email updates</h3>
      <p class="hidden submit-confirmation">Thanks! A confirmation email has been sent to your inbox.</p>
      <p class="hide-on-submit">Subscribe to receive email notifications whenever new videos are available.</p>
      <%= form_tag "/notifications", remote: true, :class => "hide-on-submit notifications-form" do %>
        <div class="email-selection">
          <div class="email-option">
            <%= check_box_tag :all_videos, true %>
            <%= label_tag :all_videos, "All Videos" %>
            <div class="check"></div>
          </div>
          <div class="email-option">
            <%= check_box_tag :all_livestreams, true %>
            <%= label_tag :all_livestreams, "All Livestreams" %>
            <div class="check"></div>
          </div>
        </div>
        <%= text_field_tag :email, nil, :class => "footer-email", placeholder: "Email Address" %>
        <%= submit_tag "Submit", :class => "submit-footer-email" %>
      <% end %>


    </div>
    <div class="right">
      <div class="ecosystem">
        <h3>Draper Ecosystem</h3>
        <li>Draper University</li>
        <li> - Residential Program</li>
        <li> - Executive Program</li>
        <li class="important">Hero City</li>
        <li>VCx</li>
        <li>Draper Associates</li>
        <li>Draper Venture Network</li>
      </div>
      <div class="social-media">
        <h3>Follow DraperTV</h3>
        <li class="important">Youtube</li>
        <li>Facebook</li>
        <li>Instagram</li>
        <li>Twitter</li>
        <li>Pinterest</li>
      </div>
    </div>
  </div>
  <p class="footer-footer">All rights reserved, Draper Collective LLC </p>
</footer>
<%= render partial: "notifications/modal" %>