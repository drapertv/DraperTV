<header id="global-header">
  <div class="header-left">
    <%= link_to root_path do %>
      <%= image_tag 'drapertvlogo.svg', :class => "header-item logo" %>
    <% end %>
  </div>
  <div class="header-right">
    <li class="header-item">
      <%= link_to series_index_path do %>
        SPEAKERS
      <% end %>
    </li>
    <li class="header-item">
      <%= link_to livestreams_path do %>
        LIVESTREAMS
      <% end %>
    </li>
    <li class="header-item">
      <%= link_to "http://www.draperuniversity.com" do %>
        STUDENTS
      <% end %>
    </li>
    <li class="header-item">
      <%= link_to "http://courses.drapertv.com" do %>
        COURSES
      <% end %>
    </li>
    <li class="header-item dropdown-container">
      <%= link_to "http://www.draperuniversity.com" do %>
        DRAPER ECOSYSTEM
      <% end %>
      <ul class="dropdown">
        <li>DRAPER UNIVERSITY</li>
        <li>HERO CITY</li>
        <li>VCx</li>
        <li>DRAPER ASSOCIATES</li>
        <li>DRAPER VENTURE NETWORK</li>
      </ul>
    </li>
    <li class="header-item">
      <%= link_to about_path do %>
        ABOUT
      <% end %>
    </li>
    <%= form_for Search.new do |f| %>
      <%= f.text_field :terms, :class => "search-input hidden", placeholder: "Search" %>
    <% end %>
    <%= image_tag "search-icon.png", :class => "search-icon header-item" %>
  </div>
</header>