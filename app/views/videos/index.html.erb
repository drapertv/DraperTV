<div class="videos-container">
  <header id="video-header">
    <ul class="video-header-mid no-mobile">
      <% @tags.each do |tag| %>
        <li class="video-header-item">
          <p class="<%= tag.name %>">
            <%= tag.name %>
          </p>
        </li>
      <% end %>
       <li class="video-header-item active">
        <p class="ALL">
          ALL
        </p>
      </li>
    </ul>
  </header>
  <div class="section-content">
    <h2 class="section-title">FEATURED</h2>
    <%= render partial: "featured_videos" %>
    <div class="video-collection-header">
      <div class="collections-left">
        <h2 class="section-title">QUICK WATCHES</h2>
      </div>
      <div class="collections-right">
        <div class="pages">
        <% if !@first_page %>
          <%= link_to url_for(page: @page_back) do %>
            <%= image_tag "scroll-arrow.png", :class => "page-back" %>
          <% end %>
        <% end %>
          <div class="page-display"><%= @page.to_s.rjust(3, '0') || "000" %> <%= image_tag "scroll-arrow.png", :class => "page-down" %></div>
        <% if !@last_page %>
          <%= link_to url_for(page: @page_next) do %>
            <%= image_tag "scroll-arrow.png", :class => "page-next" %>
          <% end %>
        <% end %>
        </div>
      </div>
    </div>
    
    <ul class="regular-videos">
      <% @videos.each do |video| %>
        <%= render partial: 'video_item_container', locals: {video: video} %>
      <% end %>
    </ul>
    <%= render partial: 'layouts/footer' %>
  </div>
</div>
