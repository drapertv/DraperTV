<section class="lightbox">
  <div class="videobox">
    <div class="videoplayer">
      <%= @video_yt_embed %>
    </div>
    <div class="series-playlist-info-open">
       <%= image_tag "dropdown-triangle.svg", :class => "featured-play-btn svg" %>
       <p><%= @videos.count %> episodes</p>
    </div>
    <div class="series-playlist-info-hide">
       <%=image_tag "dropdown-triangle.svg", :class => "featured-play-btn svg" %>
    </div>
    <div class="series-playlist-info">
      <h3 class="series-count"><%= @videos.count %> episodes<h3>
      <ul class="series-list">
        <% @videos.each_with_index do |video, i| %>
          <%= link_to video_path video do%>
            <li class="video-list-item <%= 'active' if video == @video %>">
              <p class="video-number"><%= i + 1 %>.</p>
              <p class="video-title"><%= video.title %></p>
              <p class="video-length"><%= video.length %></p>
            </li>
          <% end %>
        <% end %>
      </ul>
    </div>
  </div>
</section>


<section class="video-info">
  <div class="video-info-main">
    <h1 class="video-title">
      <%= @series.title.upcase %>
    </h1>
    <p class="video-speaker-info">
      <%= @video.speaker_name %>, <%= @series.speaker_position %>
    </p>

    <div class="video-actions">
    <div class="action-icon blue-item expanded">
      <%= image_tag "speaker-icon.png", :class => "notify-icon svg non-hover" %>
      <p>Speaker Series</p>
    </div>
    <div class="action-icon teal-item show-notify-modal expanded">
      <%= image_tag "notify-icon.svg", :class => "notify-icon svg" %>
      <p>Notify Me</p>
    </div>
    </div>

    <div class="video-about">
      <h3>About </h3>
      <p><%= @series.html_description  %></p>
    </div>
  </div>

  <div class="video-info-side">
    <div class="action-icon blue-item expanded">
      <%= image_tag "speaker-icon.png", :class => "notify-icon svg non-hover" %>
      <p>Speaker Series</p>
    </div>
    <div class="action-icon teal-item show-notify-modal expanded">
      <%= image_tag "notify-icon.svg", :class => "notify-icon svg" %>
      <p>Notify Me</p>
    </div>
  </div>
</section>
<section class="media-container single-row index-view">
  <div class="media-list">
    <h3 class="media-title"><%= @media[:title] %></h3>
    <div class="media-thumbnails">
      <% @media[:content].each do |content| %>
        <%= link_to media_path(content), :class => "disabled" do %>
          <div class="media-thumbnail <%= content.industries %>" data-date="<%= content.seconds_elapsed_since_creation %>" data-speaker="<%= content.speaker_name %>" data-views="<%= rand(10000) %>">
            <div class="media-info">
              <div class="media-speaker-name">
                <%= content.speaker_name %>
              </div>
              <div class="media-title">
                <%= content.thumbnail_title %>
              </div>
            </div>
            <%= image_tag content.vthumbnail.url(:seriesthumb), :class => "thumbnail-img" %>
            <div class="thumbnail-gradient"></div>
            <div class="thumbnail-overlay-gradient"></div>
            <div class="thumbnail-description"><p><%= content.html_description %></p></div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</section>
