    <section class="main">
      <div class="section-title">
        <h1>SERIES</h1>
        <div class="section-title-menu"></div>
      </div>
      <div class="categories hide-section">
        <a href="#"><h3 class="categories-item blue">Attitude</h3></a>
        <a href="#"><h3 class="categories-item cyan">Starting Up</h3></a>
        <a href="#"><h3 class="categories-item teal">Fundraising</h3></a>
        <a href="#"><h3 class="categories-item green">Product</h3></a>
        <a href="marketing.html"><h3 class="categories-item yellow">Marketing</h3></a>
        <a href="#"><h3 class="categories-item orange">Sales</h3></a>
        <a href="#"><h3 class="categories-item red">Hiring</h3></a>
        <a href="#"><h3 class="categories-item purple">Finance</h3></a>
        <a href="#"><h3 class="categories-item black">Legal</h3></a>
        <a href="#"><h3 class="categories-item grey">Extras</h3></a>
      </div>
      <div class="section-content-list">
        <% @playlists.each do |playlist| %>
          <div class="content">
            <%= link_to playlist_path(playlist) do %>
              <%= image_tag playlist.videos.first.vthumbnail_url(:seriesthumb), :class => "series-thumbnail" %>
              <div class="content-text">
                <div class="content-title">
                  <h3><%= playlist.title %></h3>
                </div>
                <div class="content-subtitle">
                  <h4><%= playlist.name %></h4>
                </div>
              </div>
            <% end %>
            <div class="content-expand">
              <div class="content-expand-header">
                <div class="arrow"></div>
                <p><%= playlist.videos.count %> videos</p>
              </div>
              <div class="content-expand-content hide-section">
                <% playlist.videos.each do |video| %>
                  <%= link_to video_path(video) do %>
                    <div class="video">
                      <p class="video-title"><%= video.title %></p>
                      <p class="video-subtitle"><%= video.length %></p>
                    </div>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </section>
    <footer>
    <small>All rights reserved, Draper Collective, LLC.</small>
    <small>Made with <i class="fa fa-heart footer-heart"></i> in San Mateo, CA</small>
  </footer>
<script>
  // alert("Javascript works!");
  $('.menu').on('click', function() {
    $('.menu-menu').toggleClass('hide-section');
  });
  $('.main').on('click', function() {
    $('.menu-menu').addClass('hide-section');
  });
  $('.search').on('click', function() {
    $('.menu, .logo, .search-box').toggleClass('hide-section');
  });

  $('.section-title-menu').on('click', function() {
    $('.categories').toggleClass('hide-section');
  });
  $('.content-expand-header').on('click', function() {
    $(this).next().toggleClass('hide-section');
    $(this).children('.arrow').toggleClass('rotate180');
  });
</script>

