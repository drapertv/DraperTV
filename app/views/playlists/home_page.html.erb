<section class="main home">
      <div class="featured-carousel">
        <a href="#"><div class="featured-item featured-one">
          <div class="featured-overlay">
            <div class="featured-text">
              <h3>Elon Musk</h3>
              <h1>How to find problems worth solving</h1>
            </div>
          </div>
        </div></a>
        <a href="#"><div class="featured-item featured-two">
          <div class="featured-overlay">
            <div class="featured-text">
              <h3>Steve Jurvetson</h3>
              <h1>Disruptive Innovation</h1>
            </div>
          </div>
        </div></a>
        <a href="#"><div class="featured-item featured-three">
          <div class="featured-overlay">
            <div class="featured-text">
              <h3>Heidi Roizen</h3>
              <h1>Power up your Network</h1>
            </div>
          </div>
        </div></a>
      </div>
      <div class="featured-tabs">
        <button class="featured-popular blue tabs-selected">
          <h3>Popular</h3>
        </button>
        <button class="featured-new green">
          <h3>New</h3>
        </button>
        <button class="featured-topics orange">
          <h3>Topics</h3>
        </button>
      </div>
      <div class="featured-popular-content content-list">
        <% @popular.each do |playlist| %>
          <div class="content">
            <%= link_to playlist_path(playlist) do %>
              <img class="series-thumbnail "></img>
              <div class="content-text">
                <div class="content-title">
                  <h3><% playlist.title %></h3>
                </div>
                <div class="content-subtitle">
                  <h4><%= playlist.name %></h4>
                </div>
              </div>
            <% end %>
            <div class="content-expand">
              <div class="content-expand-header">
                <div class="arrow"></div>
                <p><%= playlist.videos.count %> videos</p>
              </div>
              <div class="content-expand-content hide-section">
                <% playlist.videos.each do |video| %>
                  <%= link_to video_path(video) do %>
                    <div class="video">
                      <p class="video-title"><%= video.title %></p>
                      <p class="video-subtitle"><% video.length %></p>
                    </div>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <div class="featured-new-content content-list hide-section">
        <% @new.each do |playlist| %>
          <div class="content">
            <%= link_to playlist_path(playlist) do %>
              <img class="series-thumbnail "></img>
              <div class="content-text">
                <div class="content-title">
                  <h3><% playlist.title %></h3>
                </div>
                <div class="content-subtitle">
                  <h4><%= playlist.name %></h4>
                </div>
              </div>
            <% end %>
            <div class="content-expand">
              <div class="content-expand-header">
                <div class="arrow"></div>
                <p><%= playlist.videos.count %> videos</p>
              </div>
              <div class="content-expand-content hide-section">
                <% playlist.videos.each do |video| %>
                  <%= link_to video_path(video) do %>
                    <div class="video">
                      <p class="video-title"><%= video.title %></p>
                      <p class="video-subtitle"><% video.length %></p>
                    </div>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <div class="featured-topics-content content-list hide-section">
        <div class="featured-categories">
          <a href="#" class="categories-item">
            <div class="categories-icon attitude-icon"></div>
            <h3 class="blue">Attitude</h3>
          </a>
          <a href="#" class="categories-item">
            <div class="categories-icon startingup-icon"></div>
            <h3 class="cyan">Starting Up</h3>
          </a>
          <a href="#" class="categories-item">
            <div class="categories-icon fundraising-icon"></div>
            <h3 class="teal">Fundraising</h3>
          </a>
          <a href="#" class="categories-item">
            <div class="categories-icon product-icon"></div>
            <h3 class="green">Product</h3>
          </a>
          <a href="marketing.html" class="categories-item">
            <div class="categories-icon marketing-icon"></div>
            <h3 class="yellow">Marketing</h3>
          </a>
          <a href="#" class="categories-item">
            <div class="categories-icon sales-icon"></div>
            <h3 class="orange">Sales</h3>
          </a>
          <a href="#" class="categories-item">
            <div class="categories-icon hiring-icon"></div>
            <h3 class="red">Hiring</h3>
          </a>
          <a href="#" class="categories-item">
            <div class="categories-icon finance-icon"></div>
            <h3 class="purple">Finance</h3>
          </a>
          <a href="#" class="categories-item">
            <div class="categories-icon legal-icon"></div>
            <h3 class="black">Legal</h3>
          </a>
          <a href="#" class="categories-item">
            <div class="categories-icon extras-icon"></div>
            <h3 class="grey">Extras</h3>
          </a>
        </div>
      </div>
      <footer>
        <small>All rights reserved, Draper Collective, LLC.</small>
        <small>Made with <i class="fa fa-heart footer-heart"></i> in San Mateo, CA</small>
      </footer>
    </section>

    <script>
      // alert("Javascript works!");
      $('.menu').on('click', function() {
        $('.menu-menu').toggleClass('hide-section');
      });
      $('.main').on('click', function() {
        $('.menu-menu').addClass('hide-section');
      });
      $('.search').on('click', function() {
        $('.menu, .logo, .search-box').toggleClass('hide-section');
      });

      $('.section-title-menu').on('click', function() {
        $('.categories').toggleClass('hide-section');
      });
      $('.content-expand-header').on('click', function() {
        $(this).next().toggleClass('hide-section');
        $(this).children('.arrow').toggleClass('rotate180');
      });
      $('.featured-carousel').slick({
        arrows: false,
        autoplay: true,
        autoplaySpeed: 3000,
        speed: 1000,
        pauseOnHover: false
      });
      $('.featured-tabs > button').on('click', function() {
        $('.featured-tabs > button').removeClass('tabs-selected');
        $(this).addClass('tabs-selected');
      });
      $('.featured-popular').on('click', function() {
        $('.content-list').addClass('hide-section');
        $('.featured-popular-content').removeClass('hide-section');
      });
      $('.featured-new').on('click', function() {
        $('.content-list').addClass('hide-section');
        $('.featured-new-content').removeClass('hide-section');
      });
      $('.featured-topics').on('click', function() {
        $('.content-list').addClass('hide-section');
        $('.featured-topics-content').removeClass('hide-section');
      });
    </script>