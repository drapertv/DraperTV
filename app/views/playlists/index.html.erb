<section class="vbox">
  <section id="content">
    <section class="vbox" id="bjax-el">
      <section class="scrollable">
      <div id="">
        <div class="landing-container landing-top">
          <section class="landing-section">
            <div class="section-content">
                  <h2 class="font-thin m-b section-title">FEATURED</h2>
                  <div class="row row-sm">
                    <% VideoFeature.where(:type_series => true).limit(4).each do |id| %>
                    <% video = Video.find(id.video_id) %>
                      <div class="col-xs-12 col-sm-3">
                        <div class="item video">
                          <div class="pos-rlt">

                            <div class="item-overlay opacity r r-2x bg-black">
                              <div class="center text-center m-t-n">
                                <% if video.can_be_accessed_by? current_user %>
                                  <a href="<%= video_path(video) %>"><i class="fa fa-play-circle i-2x"></i></a>
                                <% else %>
                                  <i class="fa fa-play-circle i-2x"></i>
                                  <div class="modal modal-overlay">
                                    <div class="modal-content video-modal">
                                      <div class="modal-message">This video is video is only available for premium users. Click here to get premium access for $9.99.</div>
                                    <%= link_to video_increment_demand_path(video), remote: true do %>
                                      <div class="btn-primary btn m-t-lg">
                                        Get Access
                                      </div>
                                    <% end %>
                                    </div>
                                  </div>
                                <% end %>
                              </div>
                            </div>
                            <div class="bottom">
                              <span class="badge section-time m-l-sm m-t-sm pull-right"> 3:45 </span>
                            </div>
                            <div class="top">
                              <span class="badge bg-dark m-l-sm m-t-sm pull-right"></span>
                            </div>
                            <a href="#"><img src="<%= video.vthumbnail %>" alt="" class="r r-2x img-full"></a>
                          </div>
                          <div class="padder-v">
                            <a href="#" class="text-ellipsis qwatch-title"><%= video.title %></a>
                            <p class="text-ellipsis text-xs text-muted"> 3045 Views * <%= video.get_upvotes.size %> <i class="fa fa-star stared"></i></p>
                          </div>
                        </div>
                      </div>
                    <% end %>
                  </div>
            </div>
          </section>
          <div class="section-content">
            <h2 class="font-thin m-b section-title">SERIES</h2>
          </div>
          <% @playlists.each do |playlist| %>

          <section class="landing-section video-section">
            <div class="section-content gray-border-bottom">
              <div class="series-header">
                <div class="pull-left series-title">
                  <%= playlist.title %>
                </div>
                <div class="pull-right green-btn series-price">
                  Full Series <span class="bold">$<%= playlist.price %></span>
                </div>
              </div>
              <div class="series-content">
                <div class="white-gradient no-mobile">
                </div>
                <%= image_tag 'scroll-arrow.png', :class => "scroll-arrow no-mobile" %>
                <%= image_tag User.where(:id => playlist.author_id).first.avatar, :class => "pull-left video-thumbnail" %>
                <% playlist.video_ids.each do |v| %>
                <% @video = Video.where(:id => v).first %>
                  <div class="series-video">
                    <div class="video-length">3:59</div>
                    <a href="<%= video_path(@video) %>">
                      <%= image_tag 'play-icon.png', :class => "video-play" %>
                    </a>
                    <%= image_tag @video.vthumbnail, :class => "video-thumbnail" %>
                    <div class="video-title blue">
                    <a href="<%= video_path(@video) %>"><%= truncate(@video.title, length: 30, separator: ' ') %></a>
                    </div>
                  </div>
                <% end %>
              </div>
              <div class="series-footer no-mobile">
                <div class="pull-right challenge-btn"></div>
                <div class="pull-right m-r-md">
                  Challenge: Do Something Test Challenge : <%= playlist.challange_id %>
                </div>
              </div>
            </div>
          </section>
          <div class="line b-b"></div>
          <% end %>


        </div>
      </div>

    </section>
  </section>
</section>