<% if @welcome %>
  <%= render partial: "visitors/welcome" %>
<% end %>

<div class="playlist-container">
  <div class="section-content">
    <div id="featured-series">
      <h2 class="section-title">FEATURED</h2>
      <% cache 'featured_playlists' do %>
        <%= render partial: "featured_playlists" %>
      <% end %>
    </div>
    <div class="regular-series">
      <div class="video-collection-header">
        <div class="collections-left">
          <h2 class="section-title">SERIES</h2>
        </div>
        <div class="collections-right">
          <div class="pages">
            <% if !@first_page %>
              <%= link_to url_for(page: @page_back) do %>
                <%= image_tag "scroll-arrow.png", :class => "page-back" %>
              <% end %>
            <% else %>
                <%= image_tag "scroll-arrow.png", :class => "page-back faded" %>
            <% end %>
              <div class="page-display"><span class="current-page"><%= @page.to_s || "0" %></span> <%= image_tag "scroll-arrow.png", :class => "page-down" %></div>
            <% if !@last_page %>
              <%= link_to url_for(page: @page_next) do %>
                <%= image_tag "scroll-arrow.png", :class => "page-next" %>
              <% end %>
            <% else %>
                <%= image_tag "scroll-arrow.png", :class => "page-next faded" %>
            <% end %>
          </div>
        </div>
      </div>
      <% cache 'all_playlists', skip_digest: true do %>
        <% @playlists.each do |playlist| %>
          <section class="video-section">
            <%= render partial: "show", locals: {playlist: playlist} %>
          </section>
        <% end %>
      <% end %>
    </div>
    <div class="pages bottom">

      <% if !@first_page %>
        <%= link_to url_for(page: @page_back) do %>
          <p class="page-next-info">Prev page</p><%= image_tag "scroll-arrow.png", :class => "page-back" %>
        <% end %>
      <% else %>
          <p class="page-next-info text-faded">Prev page</p><%= image_tag "scroll-arrow.png", :class => "page-back faded" %>
      <% end %>
        <div class="page-display"><span class="current-page"><%= @page.to_s || "0" %></span> <%= image_tag "scroll-arrow.png", :class => "page-down" %></div>
      <% if !@last_page %>
        <%= link_to url_for(page: @page_next) do %>
          <%= image_tag "scroll-arrow.png", :class => "page-next" %><p class="page-next-info">Next page</p>
        <% end %>
      <% else %>
          <%= image_tag "scroll-arrow.png", :class => "page-next faded" %><p class="page-next-info text-faded">Next page</p>
      <% end %>
    </div>
    <%= render partial: 'layouts/footer' %>
  </div>
</div>

<script>
  $('li.header-item').first().addClass('active')
</script>
